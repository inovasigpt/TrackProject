{
    "rewrites": [
        {
            "source": "/api",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/apps/web/dist/index.html"
        }
    ]
}
}